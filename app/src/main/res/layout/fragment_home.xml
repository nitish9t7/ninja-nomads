<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="10dp">

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/grid_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="96dp"
            android:alignmentMode="alignBounds"

            android:useDefaultMargins="true"
            tools:context=".MainActivity">
            <Button
                android:id="@+id/but_nearByMe"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/nearbyme"
                android:onClick="clickNearByMe"/>

            <Button
                android:id="@+id/but_edu"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/education"
                android:onClick="clickEducation" />

            <Button
                android:id="@+id/but_med"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/medical"
                android:onClick="clickMed" />

            <Button
                android:id="@+id/but_parks"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/parks"
                android:onClick="clickPark" />

            <Button
                android:id="@+id/but_travel"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/travel"
                android:onClick="clickTravel" />

            <Button
                android:id="@+id/but_prayer"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/prayers"

                android:onClick="clickPrayer" />

            <Button
                android:id="@+id/official"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/official"

                android:onClick="clickOfficial" />

            <Button
                android:id="@+id/unofficial"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_row="4"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/unofficials"
                android:onClick="clickUnofficial" />

            <Button
                android:id="@+id/but_rest"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_row="4"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/restaurant"
                android:onClick="clickMenu" />

            <Button
                android:id="@+id/but_bank"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_row="5"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/bank"
                android:onClick="clickBank" />

            <Button
                android:id="@+id/but_survey"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_row="5"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/survey"
                android:onClick="clickSurvey" />
            <Button
                android:id="@+id/but_button2"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_row="6"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"

                />
            <Button
                android:id="@+id/but_button3"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_row="6"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                />


        </GridLayout>
    </ScrollView>
</RelativeLayout>
